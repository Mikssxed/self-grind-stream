{
  "name": "server",
  "version": "1.0.0",
  "description": "self grind server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "rimraf ./dist && swc ./src -d ./dist",
    "start": "node dist/server.js",
    "dev": "nodemon --exec node --loader ts-node/esm ./src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:deploy": "npx prisma migrate deploy && npx prisma generate",
    "docker:setup": "docker compose --profile setup up",
    "docker:start": "docker compose up",
    "docker:migrate": "docker compose run --rm prisma-migrate",
    "db:start": "docker compose up -d db",
    "db:stop": "docker compose down",
    "db:logs": "docker compose logs -f db"
  },
  "author": "mikssxed",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.13.3",
    "prisma": "^6.4.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "concurrently": "^9.1.2",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.4.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "prisma": {
    "seed": "ts-node --esm prisma/seed.ts",
    "schema": "./prisma/schema.prisma"
  },
  "exports": "./dist/server.js",
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true,
    "transpileOnly": false,
    "esm": true,
    "logError": true
  }
}
